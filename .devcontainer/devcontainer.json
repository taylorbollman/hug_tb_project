{
  "name": "PyTorch with GPU",
  "image": "dockerfile",
  "runArgs": [
    "--gpus", "all"
  ],
  "customizations": {
    "settings": {
      "python.pythonPath": "${command:python}",
      "extensions.autoUpdate": true
    },
    "extensions": {
      "recommendations": [
        "ms-python.python"
      ]
    }
  }
}
